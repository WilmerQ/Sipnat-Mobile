<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wilmer.sat_riomanzanares.MiPerfil"
    tools:showIn="@layout/app_bar_mi_perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario: "
        android:id="@+id/textView9"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo: "
        android:id="@+id/textView14"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_below="@+id/TxtNombreUsuario"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="telefono:"
        android:id="@+id/textView15"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_below="@+id/EditCorreo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Datos"
        android:id="@+id/BtnActualizarDatos"
        android:layout_below="@+id/EditTelefono"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ó"
        android:id="@+id/textView16"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_below="@+id/BtnActualizarDatos"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtNombreUsuario"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TxtNombreUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EditCorreo"
        android:layout_below="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold|italic"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/EditTelefono"
        android:layout_below="@+id/textView15"
        android:layout_alignRight="@+id/EditCorreo"
        android:layout_alignEnd="@+id/EditCorreo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:textStyle="bold|italic"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Contraseña"
        android:id="@+id/BtnCambiarContra"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
